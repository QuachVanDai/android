<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info">

    <ImageView
        android:id="@+id/imgInfo"
        android:layout_width="266dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/btnBackInfo"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/design_default_color_primary"
        android:text="BACK"
        app:layout_constraintEnd_toStartOf="@+id/imgInfo"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="533dp"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgInfo">

        <LinearLayout
            android:layout_width="406dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Tên"
                android:textAlignment="center"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtTenInfo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Họ Tên"
                android:textAlignment="center"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Giới Tính"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtGioiTinhInfo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Giới tính"
                android:textAlignment="center"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="SĐT"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtSDTInfo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Số điiện thoại"
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Chức Vụ"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtChucVuInfo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Chức vụ"
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Địa Chỉ"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtDiaChiInfo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Địa chỉ"
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Lương cơ bản"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtLuongInfo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Lương cơ bản"
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Số Ngày Làm"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtSonNgayLamInfo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Số ngày làm"
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Tổng Lương"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtTongLuongInfo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Tổng lương"
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Ghi Chú"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtGhiChuInfo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="ghi chú"
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>