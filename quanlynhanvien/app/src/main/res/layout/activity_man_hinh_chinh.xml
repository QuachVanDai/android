<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    tools:context=".ManHinhChinh">

    <LinearLayout
        android:layout_width="406dp"
        android:layout_height="519dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.931">

        <ImageView
            android:id="@+id/imgMember"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            tools:srcCompat="@drawable/member" />

        <ImageView
            android:id="@+id/imgAdd"
            android:layout_width="match_parent"
            android:layout_height="130dp"

            tools:srcCompat="@drawable/adduser" />

        <ImageView
            android:id="@+id/imgLich"
            android:layout_width="match_parent"
            android:layout_height="130dp"

            tools:srcCompat="@drawable/lich" />

        <ImageView
            android:id="@+id/imgLogOut"
            android:layout_width="match_parent"
            android:layout_height="108dp"

            app:srcCompat="@drawable/dangxuat" />
    </LinearLayout>

    <TextView
        android:id="@+id/txttitle"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="68dp"
        android:text="Phần Mềm Quản Lý Nhân Viên"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>